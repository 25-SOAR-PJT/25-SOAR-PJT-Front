<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:padding="18dp"
    android:background="@drawable/round_background7">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/textViewPolicyRegion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sample"
                style="@style/Font_Label_Medium"
                android:textColor="@color/ref_blue_600"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:id="@+id/textViewPolicyDeadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/num"
                android:paddingVertical="1.5dp"
                android:paddingHorizontal="3dp"
                android:background="@drawable/round_background5"
                android:backgroundTint="@color/semantic_surface_primary_lightest"
                style="@style/Font_Caption_Medium"
                android:textColor="@color/ref_blue_500"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textViewPolicyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample"
            style="@style/Font_Label_Medium"
            android:textColor="@color/ref_black"
            android:layout_marginVertical="5.5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/largeClassification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sample"
                style="@style/Font_Label_Medium"
                android:textColor="@color/ref_gray_400"/>
            <View
                android:layout_width="1dp"
                android:layout_height="8dp"
                android:background="@color/ref_coolgray_300"
                android:layout_gravity="center"
                android:layout_marginHorizontal="4dp"/>
            <TextView
                android:id="@+id/mediumClassification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sample"
                style="@style/Font_Label_Medium"
                android:textColor="@color/ref_gray_400"/>

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="24dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="8dp">

        <ImageView
            android:id="@+id/btn_bookmark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_bookmark"
            android:layout_gravity="center"/>

        <ProgressBar
            android:id="@+id/bookmark_progress_bar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone" /> </FrameLayout>
</LinearLayout>