<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 일러스트 -->
    <ImageView
        android:id="@+id/ivIllustration"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_onboarding_01"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="108dp" />

    <!-- 메인 타이틀 -->
    <TextView
        android:id="@+id/tvTitle"
        style="@style/Font_Heading200_Bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="내가 찾던 지원사업이 여기에!"
        android:textColor="@color/ref_black"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/ivIllustration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 서브 타이틀(2줄 허용) -->
    <TextView
        android:id="@+id/tvSubTitle"
        style="@style/Font_Body_Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="나의 정보를 입력하고\n맞춤 지원 사업을 추천받아보세요"
        android:textAlignment="center"
        android:textColor="@color/ref_gray_600"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
