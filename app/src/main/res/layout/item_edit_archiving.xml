<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_background"
    android:padding="16dp"
    android:layout_marginBottom="12dp">

    <ImageView
        android:id="@+id/checkbox"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_checkbox_inactive"
        app:tint="@color/ref_gray_200"
        android:layout_marginEnd="28dp"/>

    <View
        android:id="@+id/color_tag"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="@color/semantic_accent_deadline_based"
        android:layout_marginEnd="16dp"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginEnd="12dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">
            <TextView
                android:id="@+id/text_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/always"
                style="@style/Font_Label_Medium"
                android:textColor="@color/ref_gray_500"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dday"
                style="@style/Font_Label_Medium"
                android:textColor="@color/ref_gray_500"/>
            <TextView
                android:id="@+id/text_dday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/num"
                style="@style/Font_Label_Medium"
                android:textColor="@color/ref_gray_500"/>
        </LinearLayout>
        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sample"
            style="@style/Font_Body_Semibold"
            android:textColor="@color/semantic_text_primary"/>
    </LinearLayout>
</LinearLayout>