<?xml version="1.0" encoding="utf-8"?>
<!--activity_unsubscribe_success -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyPage.ChangePwActivity"
    android:background="@color/ref_white">

    <include
        android:id="@+id/appbar"
        layout="@layout/appbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="76dp"
        android:paddingBottom="16dp"
        android:paddingHorizontal="16dp"
        android:gravity="center">


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_checkbox_active"
            android:layout_marginTop="76dp"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unsubscribe_success"
            style="@style/Font_Heading400_Bold"
            android:textColor="@color/semantic_text_strongest"
            android:layout_marginBottom="52dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_to_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/to_start"
            style="@style/close_button"
            android:enabled="true"/>
    </LinearLayout>
</LinearLayout>