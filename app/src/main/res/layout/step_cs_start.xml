<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/ref_white"
    android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        >


        <TextView
            android:id="@+id/tvTitle"
            style="@style/Font_Heading400_Semibold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="@string/cs_entry"
            android:textSize="20sp"
            android:textColor="@color/ref_coolgray_800"
            android:contentDescription="@null"
            android:layout_marginStart="24dp"
            app:tint="@color/ref_gray_600"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <RelativeLayout
            android:id="@+id/ivIllustration"
            android:layout_width="224.8dp"
            android:layout_height="232dp"
            android:background="@drawable/ic_cs"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toTopOf="@+id/btnContinue"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinue"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            style="@style/Widget.MaterialComponents.Button"
            android:fontFamily="@font/pretendard_bold"
            android:textSize="14sp"
            android:lineHeight="20sp"
            android:letterSpacing="0"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/ref_blue_500"
            android:text="@string/keep_going"
            android:textColor="@color/ref_white"
            app:cornerRadius="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="48dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSkip"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            style="@style/Widget.MaterialComponents.Button"
            android:fontFamily="@font/pretendard_bold"
            android:textSize="14sp"
            android:lineHeight="20sp"
            android:letterSpacing="0"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/ref_white"
            android:enabled="false"
            android:text="@string/skip"
            android:textColor="@color/ref_gray_500"
            app:cornerRadius="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>