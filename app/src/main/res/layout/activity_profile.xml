<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPage.ProfileActivity"
    android:orientation="vertical">

    <include
        android:id="@+id/appbar"
        layout="@layout/appbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/ref_gray_100"
            android:layout_marginBottom="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="vertical"
                android:background="@color/ref_white"
                android:paddingTop="24dp"
                android:paddingHorizontal="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="@string/profile_title"
                    style="@style/Font_Body_Semibold"
                    android:textColor="@color/ref_coolgray_600"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        style="@style/Font_Label_Semibold"
                        android:textColor="@color/ref_coolgray_600"
                        android:layout_marginBottom="6dp"/>
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_background"
                        android:backgroundTint="@color/semantic_surface_assistive_based"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="16dp"
                        android:text="@string/sample"
                        style="@style/Font_Body_Medium"
                        android:textColor="@color/ref_coolgray_700"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_change_pw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="32dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/change_pw"
                        style="@style/Font_Label_Semibold"
                        android:textColor="@color/ref_coolgray_500"/>
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/icon_arrow_small"
                        app:tint="@color/ref_coolgray_300"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_summary_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                android:paddingTop="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/change_curation_inform"
                    style="@style/Font_Body_Semibold"
                    android:textColor="@color/ref_coolgray_600"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:id="@+id/section_region"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="지역"
                        style="@style/Font_Body_Semibold"
                        android:textColor="@color/ref_coolgray_500"
                        android:layout_marginBottom="16dp"/>
                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/flexbox_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:flexWrap="wrap"
                        app:flexDirection="row"
                        app:justifyContent="flex_start"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/section_job"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="직업"
                        style="@style/Font_Body_Semibold"
                        android:textColor="@color/ref_coolgray_500"
                        android:layout_marginBottom="16dp"/>
                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/flexbox_job"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:flexWrap="wrap"
                        app:flexDirection="row"
                        app:justifyContent="flex_start"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/section_education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="학력"
                        style="@style/Font_Body_Semibold"
                        android:textColor="@color/ref_coolgray_500"
                        android:layout_marginBottom="16dp"/>
                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/flexbox_education"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:flexWrap="wrap"
                        app:flexDirection="row"
                        app:justifyContent="flex_start"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/section_extra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="추가 조건"
                        style="@style/Font_Body_Semibold"
                        android:textColor="@color/ref_coolgray_500"
                        android:layout_marginBottom="16dp"/>
                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/flexbox_extra"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:flexWrap="wrap"
                        app:flexDirection="row"
                        app:justifyContent="flex_start"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/section_keyword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="관심 키워드"
                        style="@style/Font_Body_Semibold"
                        android:textColor="@color/ref_coolgray_500"
                        android:layout_marginBottom="16dp"/>
                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/flexbox_keyword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:flexWrap="wrap"
                        app:flexDirection="row"
                        app:justifyContent="flex_start"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>