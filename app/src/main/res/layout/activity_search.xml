<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExplorePage.SearchActivity"
    android:orientation="vertical"
    android:background="@color/ref_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_arrow_large"
            android:layout_marginEnd="8dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/round_background"
            android:backgroundTint="@color/semantic_surface_assistive_based"
            android:paddingHorizontal="6dp"
            android:paddingVertical="7dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/search_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_search"
                android:layout_marginEnd="6dp"/>
            <EditText
                android:id="@+id/search_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/search_message"
                android:background="@null"
                style="@style/Font_Body_Regular"
                android:textColor="@color/ref_gray_500"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp"
        android:paddingTop="20dp"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_suggestions_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/recent_search"
                style="@style/Font_Body_Bold"
                android:textColor="@color/ref_coolgray_700"
                android:layout_marginVertical="12dp"/>
            <TextView
                android:id="@+id/delete_all"
                android:layout_width="54dp"
                android:layout_height="match_parent"
                android:text="@string/delete_search"
                android:gravity="center"
                style="@style/Font_Label_Medium"
                android:textColor="@color/ref_coolgray_400"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recent_search_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/after_search_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp"
        android:paddingTop="20dp"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:id="@+id/after_search_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="검색완료"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/biz_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>