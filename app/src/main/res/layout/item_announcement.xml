<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/policy1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="17dp"
    android:background="@color/ref_white">
    <!-- 서비스 이용 약관 (클릭 가능) -->
    <LinearLayout
        android:id="@+id/policy1_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:paddingTop="16dp"
        android:paddingBottom="10dp"
        android:background="@color/ref_white"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date2"
                style="@style/Font_Caption_Semibold"
                android:textColor="@color/ref_blue_600"/>
            <TextView
                android:id="@+id/announcement_title"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="@string/sample"
                style="@style/Font_Title_Medium"
                android:textColor="@color/ref_black"/>
        </LinearLayout>
        <Space
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/announcement_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_arrow_left"
            android:rotation="270"/>
    </LinearLayout>
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:background="@color/semantic_surface_normal_based"/>
    <!-- 세부 내용-->
    <LinearLayout
        android:id="@+id/announcement_detail_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"
        android:background="@color/semantic_surface_normal_based"
        android:visibility="gone">
        <TextView
            android:id="@+id/announcement_detail_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/policy_detail2"
            style="@style/Font_Caption_Regular" />
    </LinearLayout>
</LinearLayout>