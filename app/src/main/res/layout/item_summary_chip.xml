<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="36dp"
    android:background="@drawable/round_background2"
    android:backgroundTint="@color/ref_blue_150"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingEnd="12dp">

    <TextView
        android:id="@+id/text_keyword"
        style="@style/Font_Label_Semibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ref_blue_600"
        tools:text="서울시 강남구" />

    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/ic_arrow_right_blue"

        />
</LinearLayout>