<?xml version="1.0" encoding="utf-8"?>
<!--activity_record-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPage.RecordActivity"
    android:orientation="vertical"
    android:background="@color/ref_white">

    <include
        android:id="@+id/appbar"
        layout="@layout/appbar"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/biz_list"
        android:paddingTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        tools:listitem="@layout/item_explore_biz"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/btn_zero_entry"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:visibility="gone"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                android:id="@+id/zero_entry_title"
                style="@style/Font_Heading400_Semibold"
                android:layout_marginTop="200dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero_record"
                android:textColor="@color/ref_coolgray_600"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/zero_entry_desc"
                style="@style/Font_Label_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/zero_reocord_desc"
                android:textColor="#7C7B7B"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/zero_entry_title" />



            <Button
                android:id="@+id/btn_to_explore"
                style="@style/close_button"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="320dp"
                android:text="@string/to_explore"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/zero_entry_desc"
                app:layout_constraintStart_toStartOf="@id/zero_entry_desc"
                app:layout_constraintTop_toBottomOf="@id/zero_entry_desc" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</LinearLayout>