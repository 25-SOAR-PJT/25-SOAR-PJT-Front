<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlarmPage.AlarmActivity"
    android:orientation="vertical"
    android:background="@color/ref_white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/appbar"
            layout="@layout/appbar"/>
        <ImageView
            android:id="@+id/btn_setting"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_setting"
            android:layout_gravity="center|end|center_vertical"
            android:layout_marginEnd="16dp"
            android:clickable="true"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/container_no_alarm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/icon_alarm"
            android:layout_marginBottom="28dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_alarm1"
            style="@style/Font_Heading400_Semibold"
            android:textColor="@color/ref_coolgray_600"
            android:layout_marginBottom="6dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_alarm2"
            style="@style/Font_Label_Medium"
            android:textColor="@color/ref_gray_500"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_yes_alarm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="24dp"
                    android:paddingVertical="12dp"
                    android:gravity="center_vertical"
                    android:clickable="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dropdown1"
                        android:layout_marginEnd="6dp"
                        style="@style/Font_Title_Medium"/>
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/icon_arrow_left"
                        android:rotation="270"/>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/alarm_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:text="@string/alarm_7days"
                    style="@style/Font_Label_Medium"
                    android:textColor="@color/ref_gray_500"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>