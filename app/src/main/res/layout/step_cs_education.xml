<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ref_white">


    <include
        android:id="@+id/progressBg"
        layout="@layout/layout_progress_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />


    <TextView
        android:id="@+id/tvTitle"
        style="@style/Font_Heading400_Semibold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/pretendard_semibold"
        android:lineSpacingExtra="12sp"
        android:textColor="@color/ref_coolgray_800"
        android:text="@string/cs_education_tv"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="최종 학력을 알려주세요" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexbox_layout_keywords"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintBottom_toTopOf="@id/llBottomButtons"
        app:layout_constraintStart_toStartOf="@id/tvTitle"
        app:layout_constraintEnd_toEndOf="@id/tvTitle"
        app:flexWrap="wrap"
        app:alignItems="flex_start"
        app:justifyContent="flex_start">

    </com.google.android.flexbox.FlexboxLayout>
    <LinearLayout
        android:id="@+id/llBottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnPrevious"
            style="@style/Font_Body_Bold"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:background="@drawable/bg_primary_button"
            android:backgroundTint="@color/ref_gray_100"
            android:fontFamily="@font/pretendard_bold"
            android:letterSpacing="0"
            android:text="@string/previous"
            android:textColor="@color/ref_coolgray_300"
            android:textSize="16sp"
            app:cornerRadius="8dp"
            app:elevation="0dp" />

        <Button
            android:id="@+id/btnNext"
            style="@style/Font_Body_Bold"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:background="@drawable/bg_primary_button"
            android:backgroundTint="@color/ref_blue_500"
            android:fontFamily="@font/pretendard_bold"
            android:letterSpacing="0"
            android:text="@string/next"
            android:textColor="@color/ref_white"
            android:textSize="16sp"
            app:cornerRadius="8dp"
            app:elevation="0dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>