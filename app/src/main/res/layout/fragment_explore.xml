<?xml version="1.0" encoding="utf-8"?>
<!--fragment_explore -->
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExplorePage.ExploreFragment"
    android:background="@color/ref_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:background="@color/ref_white">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/explore"
                style="@style/Font_Heading400_Semibold"
                android:textColor="@color/ref_coolgray_600"/>
            <ImageView
                android:id="@+id/btn_search"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_search"/>
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="18dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="9dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/biz_category"
                        style="@style/Font_Heading500_Semibold"
                        android:textColor="@color/ref_coolgray_600"
                        android:paddingBottom="24dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <LinearLayout
                            android:id="@+id/category1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingTop="7dp"
                            android:paddingBottom="9dp"
                            android:gravity="center"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/round_background7"
                            android:backgroundTint="@color/ref_white">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/image_categroy2"
                                android:layout_marginBottom="2dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/keyword_job"
                                style="@style/Font_Label_Semibold"
                                android:textColor="@color/semantic_text_alternative"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/category2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingTop="7dp"
                            android:paddingBottom="9dp"
                            android:gravity="center"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/round_background7"
                            android:backgroundTint="@color/ref_white">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/image_categroy"
                                android:layout_marginBottom="2dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/keyword_dwelling"
                                style="@style/Font_Label_Semibold"
                                android:textColor="@color/semantic_text_alternative"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/category3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingTop="7dp"
                            android:paddingBottom="9dp"
                            android:gravity="center"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/round_background7"
                            android:backgroundTint="@color/ref_white">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/image_categroy4"
                                android:layout_marginBottom="2dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/keyword_education"
                                style="@style/Font_Label_Semibold"
                                android:textColor="@color/semantic_text_alternative"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/category4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingTop="7dp"
                            android:paddingBottom="9dp"
                            android:gravity="center"
                            android:background="@drawable/round_background7"
                            android:backgroundTint="@color/ref_white">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/image_categroy3"
                                android:layout_marginBottom="2dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/keyword_welfare"
                                style="@style/Font_Label_Semibold"
                                android:textColor="@color/semantic_text_alternative"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/divider"
                    android:layout_marginBottom="9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/ref_gray_200"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvOr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/popular_biz"
                        style="@style/Font_Heading500_Semibold"
                        android:textColor="@color/ref_coolgray_600"
                        android:paddingBottom="14dp"/>

                    <LinearLayout
                        android:id="@+id/open_keyword_page"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/round_background7"
                        android:paddingVertical="12dp"
                        android:paddingHorizontal="12dp"
                        >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_keyword_placeholder"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/keyword_select"
                                style="@style/Font_Heading500_Semibold"
                                android:textColor="@color/semantic_text_strong"/>

                            <HorizontalScrollView
                                android:id="@+id/keyword_scroll_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scrollbars="none"
                                android:visibility="gone">

                                <LinearLayout
                                    android:id="@+id/keyword_chips_container"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"/>
                            </HorizontalScrollView>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_arrow_left"
                            android:rotation="180"
                            app:tint="@color/semantic_information_normal_strongest"/>

                    </LinearLayout>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/loading_progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    tools:visibility="visible"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/biz_list"
                    android:paddingTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_explore_biz" />

                <TextView
                    android:id="@+id/text_sample"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="카테고리 번호"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    style="@style/Font_Heading100_Bold"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_personal_biz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:orientation="horizontal"
        android:background="@drawable/round_background6"
        android:paddingVertical="10dp"
        android:paddingHorizontal="24dp"
        android:layout_marginBottom="13dp"
        android:elevation="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personal_biz"
            style="@style/Font_Label_Bold"
            android:textColor="@color/ref_blue_150"
            android:layout_marginEnd="4dp"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>