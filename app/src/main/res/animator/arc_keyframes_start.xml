<objectAnimator xmlns:android="http://schemas.android.com/apk/res/android"
    android:propertyName="trimPathStart"
    android:duration="620"
    android:interpolator="@android:interpolator/linear"
    android:repeatCount="infinite"
    android:repeatMode="restart">

    <propertyValuesHolder android:propertyName="trimPathStart">
        <!-- f0: frame0 (거의 없음) -->
        <keyframe android:fraction="0.000" android:value="0.00"/>

        <!-- f1: frame1 (위→우상단 작은 호) -->
        <keyframe android:fraction="0.065" android:value="0.00"/>

        <!-- f2: frame2 (우측~하단 쿼터) -->
        <keyframe android:fraction="0.161" android:value="0.20"/>

        <!-- f3: frame3 (좌하~좌상까지 긴 구간) -->
        <keyframe android:fraction="0.290" android:value="0.45"/>

        <!-- f4: frame4 (좌상~정상 부근) -->
        <keyframe android:fraction="0.379" android:value="0.70"/>

        <!-- f5: frame5 (상단 부근 짧게) -->
        <keyframe android:fraction="0.492" android:value="0.80"/>

        <!-- f6: frame6 (좌측~상단으로 긴 구간) -->
        <keyframe android:fraction="0.637" android:value="0.50"/>

        <!-- f7: frame7 (하단~좌측) -->
        <keyframe android:fraction="0.742" android:value="0.30"/>

        <!-- f8: frame8 (거의 점에 가까운 짧은 호) -->
        <keyframe android:fraction="0.863" android:value="0.10"/>

        <!-- 루프 시작으로 부드럽게 복귀 -->
        <keyframe android:fraction="1.000" android:value="0.00"/>
    </propertyValuesHolder>
</objectAnimator>
