<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.SOAR" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>

        <item name="android:textColorPrimary">@color/semantic_text_primary</item>
        <item name="preferenceTheme">@style/Soar.PreferenceTheme</item>
        <item name="switchPreferenceCompatStyle">@style/Soar.SwitchPreferenceStyle</item>
    </style>

    <style name="Theme.SOAR" parent="Base.Theme.SOAR" />

    <style name="detail_button" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">328dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@drawable/round_background</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textColor">@color/semantic_text_strong</item>
        <item name="android:textAppearance">@style/Font_Body_Semibold</item>
    </style>

    <style name="close_button" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">328dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textColor">@color/ref_white</item>
        <item name="android:textAppearance">@style/Font_Body_Semibold</item>
    </style>

    <style name="DimmedActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Soar.PreferenceTheme" parent="PreferenceThemeOverlay">
        <item name="preferenceStyle">@style/Soar.PreferenceBase</item>
        <item name="switchPreferenceCompatStyle">@style/Soar.SwitchPreferenceStyle</item>
        <item name="preferenceCategoryStyle">@style/Soar.PreferenceCategoryStyle</item>
    </style>

    <style name="Soar.SwitchPreferenceStyle" parent="Preference.SwitchPreferenceCompat">
        <!-- 행 레이아웃 지정 (텍스트 스타일 적용되게) -->
        <item name="layout">@layout/pref_item_texts</item>
        <item name="android:layout">@layout/pref_item_texts</item>

        <!-- 위젯(오른쪽 스위치) 커스텀 -->
        <item name="widgetLayout">@layout/pref_switch_widget</item>
        <item name="iconSpaceReserved">false</item>
        <item name="allowDividerAbove">false</item>
        <item name="allowDividerBelow">false</item>
    </style>

    <style name="Soar.PreferenceBase" parent="Preference">
        <item name="layout">@layout/pref_item_texts</item>
        <item name="android:layout">@layout/pref_item_texts</item>
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="Soar.PreferenceTitle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textColor">@color/ref_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Soar.PreferenceCategoryStyle" parent="Preference.Category">
        <!-- 카테고리용 커스텀 레이아웃 -->
        <item name="layout">@layout/pref_category</item>
        <item name="android:layout">@layout/pref_category</item>
        <item name="iconSpaceReserved">false</item>
    </style>
</resources>