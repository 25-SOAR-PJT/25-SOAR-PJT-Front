<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SOAR" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>

        <item name="android:textColorPrimary">@color/semantic_text_primary</item>
    </style>

    <style name="Theme.SOAR" parent="Base.Theme.SOAR" />

    <style name="detail_button" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">328dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@drawable/round_background</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="close_button" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">328dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@drawable/round_background</item>
        <item name="backgroundTint">@color/semantic_surface_primary_based</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textColor">@color/ref_white</item>
    </style>

    <style name="DimmedActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Activity 크기 축소해도 남는 부분에 dim 적용 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item> <!-- 0 ~ 1 (어두움 정도) -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


</resources>