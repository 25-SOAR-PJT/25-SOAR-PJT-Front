<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 배경색: 기존과 동일하게 ref_gray_100 사용 -->
    <solid android:color="@color/ref_white" />

    <!-- 외곽선: 검은색, 1dp 두께 -->
    <stroke
        android:width="1dp"
        android:color="@color/ref_gray_300" />

    <!-- 모서리 둥글기: 12dp -->
    <corners android:radius="12dp" />

</shape>